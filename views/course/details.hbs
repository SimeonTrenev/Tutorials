<main>
    <div class="container">
        <h1 class="my-4">Course title : {{title}}
        </h1>

        <div class="row">

            <div class="col-md-8">
                <img class="img-fluid"
                    src="{{imageUrl}}"
                    alt="Express" />
            </div>

            <div class="col-md-4 text-center">
                <h3 class="my-3">Course Description</h3>
                <p>{{description}}</p>

                <a class="btn btn-danger" href="/course/delete/{{_id}}">Delete</a>
                <a class="btn btn-warning" href="/course/edit/{{_id}}">Edit</a>
                <span class="enrolled-span">You are already enrolled</span>
                <a class="btn btn-primary" href="/course/enroll/{{username}}/{{_id}}">Enroll</a>

            </div>
        </div>
    </div>
</main>